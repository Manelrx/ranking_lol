generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  puuid       String   @id @unique
  gameName    String
  tagLine     String
  displayName String
  isActive    Boolean  @default(true)
  tier        String?  // EMERALD, DIAMOND, etc.
  rank        String?  // IV, III, II, I
  summonerId  String?  // Cache for League V4 API
  createdAt   DateTime @default(now())

  scores      MatchScore[]
  snapshots   RankSnapshot[]
  masteries   ChampionMastery[]

  // New Fields for Evolution
  profileIconId Int?
  summonerLevel Int?
  updatedAt     DateTime @updatedAt
}

model SystemState {
  key   String @id
  value String
}

model ChampionMastery {
  id             String   @id @default(uuid())
  
  player         Player   @relation(fields: [playerId], references: [puuid])
  playerId       String
  
  championId     Int
  championName   String   // Frontend Optimization
  championLevel  Int
  championPoints Int
  lastPlayTime   BigInt   // Riot Timestamp
  
  updatedAt      DateTime @updatedAt

  @@unique([playerId, championId])
  @@index([playerId, championPoints(sort: Desc)])
}

model PdlDailyStats {
  id        String   @id @default(uuid())
  playerId  String
  
  // Normalized to UTC Midnight
  date      DateTime 
  queueType String   // SOLO | FLEX
  
  startLp   Int
  endLp     Int
  peakLp    Int
  
  wins      Int
  losses    Int
  
  @@unique([playerId, queueType, date])
}

model RankSnapshot {
  id        Int      @id @default(autoincrement())
  
  player    Player   @relation(fields: [playerId], references: [puuid])
  playerId  String
  
  queueType String   // SOLO | FLEX
  tier      String
  rank      String
  lp        Int
  
  createdAt DateTime @default(now())

  @@index([playerId, queueType, createdAt])
}

model Match {
  matchId      String   @id @unique
  queueType    String 
  gameCreation DateTime
  gameDuration Int
  createdAt    DateTime @default(now())

  scores MatchScore[]
}

model MatchScore {
  id               String   @id @default(uuid())
  
  player           Player   @relation(fields: [playerId], references: [puuid])
  playerId         String

  match            Match    @relation(fields: [matchId], references: [matchId])
  matchId          String

  lane             String
  championId       Int?
  championName     String?
  
  // Stats
  kills            Int      @default(0)
  deaths           Int      @default(0)
  assists          Int      @default(0)

  // Context Denormalization (Performance)
  queueType        String   @default("SOLO") // SOLO | FLEX
  isVictory        Boolean
  
  matchScore       Int
  performanceScore Int
  objectivesScore  Int
  disciplineScore  Int
  
  metrics          Json
  ratios           Json

  createdAt        DateTime @default(now())

  @@unique([playerId, matchId])
}
