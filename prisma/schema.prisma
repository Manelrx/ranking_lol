generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  puuid       String   @id @unique
  gameName    String
  tagLine     String
  displayName String
  isActive    Boolean  @default(true)
  tier        String?  // EMERALD, DIAMOND, etc.
  rank        String?  // IV, III, II, I
  summonerId  String?  // Cache for League V4 API
  createdAt   DateTime @default(now())

  scores      MatchScore[]
  snapshots   RankSnapshot[]
}

model RankSnapshot {
  id        Int      @id @default(autoincrement())
  
  player    Player   @relation(fields: [playerId], references: [puuid])
  playerId  String
  
  queueType String   // SOLO | FLEX
  tier      String
  rank      String
  lp        Int
  
  createdAt DateTime @default(now())

  @@index([playerId, queueType, createdAt])
}

model Match {
  matchId      String   @id @unique
  queueType    String 
  gameCreation DateTime
  gameDuration Int
  createdAt    DateTime @default(now())

  scores MatchScore[]
}

model MatchScore {
  id               String   @id @default(uuid())
  
  player           Player   @relation(fields: [playerId], references: [puuid])
  playerId         String

  match            Match    @relation(fields: [matchId], references: [matchId])
  matchId          String

  lane             String
  isVictory        Boolean
  
  matchScore       Int
  performanceScore Int
  objectivesScore  Int
  disciplineScore  Int
  
  metrics          Json
  ratios           Json

  createdAt        DateTime @default(now())

  @@unique([playerId, matchId])
}
